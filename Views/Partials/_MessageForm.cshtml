@model Message

<form asp-action="CreateMessage" asp-controller="Message" asp-route-craftId="@Model.CraftId" method="post">
    <div class="mb-3">
        <label class="form-label display-6" asp-for="MessageText"></label>
        <textarea class="form-control" rows=3 asp-for="MessageText"></textarea>
        <input type="hidden" name="UserId" value="@Model.UserId" />
        <span class="form-text text-warning" asp-validation-for="MessageText"></span>
    </div>
    <div class="text-end">
        <button type="submit" class="btn btn-primary">Post</button>
    </div>
</form>