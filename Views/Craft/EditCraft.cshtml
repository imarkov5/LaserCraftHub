@model Craft;

<h2 class="display-4">Edit your craft</h2>

<form asp-action="UpdateCraft" asp-controller="Craft" asp-route-craftId="@Model.CraftId" method="post">
    <input type="hidden" asp-for="UserId">
    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
        <span class="form-text text-warning" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Description"></label>
        <textarea rows="7" class="form-control" asp-for="Description"></textarea>
        <span class="form-text text-warning" asp-validation-for="Description"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Website"></label>
        <input class="form-control" asp-for="Website">
        <span class="form-text text-warning" asp-validation-for="Website"></span>
    </div>
    <div class="text-end">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>