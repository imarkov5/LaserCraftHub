@model HomePageViewModel;
@{
    var user = Model.User;

    var loginUser = Model.LoginUser;

    ViewData["Title"] = "Home Page";
}


<section>
    @if (ViewBag.Message is not null)

    {

        if (ViewBag.Message == "not-authenticated")

        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                You must be logged in.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }



        else if (ViewBag.Message == "invalid-credentials")

        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                Invalid credentials. Please try again.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

    }

    <div class="row">

        <div class="col-12 col-md-6">
            <h1 class="display-5 mb-3">Register</h1>
            <div class="card shadow mb-3">
                <div class="card-body">
                    @await Html.PartialAsync("../Partials/_RegisterForm", user)
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <h1 class="display-5 mb-3">Login</h1>
            <div class="card shadow">
                <div class="card-body">
                    @await Html.PartialAsync("../Partials/_LoginForm", loginUser)
                </div>
            </div>
        </div>
    </div>





</section>
